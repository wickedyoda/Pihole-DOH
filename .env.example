TZ=UTC
PIHOLE_WEBPASSWORD=change-me
PIHOLE_LISTENING_MODE=ALL

# dnscrypt-proxy listener used by Pi-hole upstream (service name + port)
DNSCRYPT_LISTEN_ADDRESS=0.0.0.0:5053

# Arbitrary label for your custom DoH server in dnscrypt-proxy config
DOH_SERVER_NAME=custom-doh

# Required: DNS stamp for your DoH endpoint (sdns://...)
DOH_SERVER_STAMP=sdns://REPLACE_WITH_YOUR_DOH_STAMP

# Comma-separated resolvers used only to bootstrap the DoH host lookup
DNSCRYPT_BOOTSTRAP_RESOLVERS=9.9.9.9:53,1.1.1.1:53
